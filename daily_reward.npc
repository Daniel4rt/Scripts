	mes "[^cc6600Premio Diario^000000]";
	mes "Dime, ¿en qué te puedo ayudar?";
	next;
	while(1) {
		switch(select("^777777 >^FF8B00 Ver premios de un día^000000:^777777 -^000000 ¿Qué es el premio diario?:^777777 -^000000 ¿Cómo ganar mi premio diario?:^777777 -^000000 Comandos disponibles:^777777 -^000000 Información interesante")) {
